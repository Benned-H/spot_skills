<launch>
  <!-- Define arguments -->
  <arg name="marker_size" default="7.62" />
  <arg name="max_new_marker_error" default="0.08" />
  <arg name="max_track_error" default="0.2" />
  <arg name="cam_image_topic" default="/spot/camera/frontleft/image" />
  <arg name="cam_info_topic" default="/spot/camera/frontleft/camera_info" />
  <arg name="output_frame" default="frontleft_fisheye" />
  <arg name="bundle_files" default="$(find spot_skills)/cabinet_ar/MarkerData_1_2_3_4.xml" />
  <!-- <arg name="bundle_files" default="$(find spot_skills)/door_ar/MarkerData_80_82_84.xml" /> -->


  <node name="ar_track_alvar_left" pkg="ar_track_alvar" type="findMarkerBundlesNoKinect" output="screen">
    <param name="marker_size" type="double" value="$(arg marker_size)" />
    <param name="max_new_marker_error" type="double" value="$(arg max_new_marker_error)" />
    <param name="max_track_error" type="double" value="$(arg max_track_error)" />
    <param name="output_frame" type="string" value="$(arg output_frame)" />
    <param name="bundle_files" type="string" value="$(arg bundle_files)" />
    <remap from="camera_image" to="$(arg cam_image_topic)" />
    <remap from="camera_info" to="$(arg cam_info_topic)" />
  </node>
</launch>
