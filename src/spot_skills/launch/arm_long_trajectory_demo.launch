<!-- Launch nodes to control Spot's arm through a long trajectory -->
<launch>

    <!-- Username, password, and IP used to connect to the Spot (pass via commandline) -->
    <arg name="username" default="dummyusername" />
    <arg name="password" default="dummypassword" />
    <arg name="hostname" default="192.168.50.3" />
    <param name="/spot/hostname" value="$(arg hostname)" type="str" />

    <!-- Launch the Spot ROS 1 driver using its primary launch file -->
    <include file="$(find spot_driver)/launch/driver.launch">
        <arg name="username" value="$(arg username)" />
        <arg name="password" value="$(arg password)" />
        <arg name="hostname" value="$(arg hostname)" />
    </include>

    <!-- Run Rviz using a default config file from the Spot driver -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find spot_viz)/rviz/robot.rviz" />

    <!-- Launch the Python node that sends the trajectories to Spot -->
    <node name="arm_long_trajectory_demo" pkg="spot_skills"
        type="arm_long_trajectory_demo.py" output="screen" />

</launch>