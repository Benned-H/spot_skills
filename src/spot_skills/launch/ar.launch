        <!-- <arg name="marker_size_frontright" value="$(arg marker_size_frontright)" /> -->
        <!-- <arg name="use_bundle" value="$(arg use_bundle)" /> -->
    <!-- </include> -->

    <node name="object_pose_estimator" pkg="spot_skills" type="obj_pose_est.py" output="screen" />
</launch>