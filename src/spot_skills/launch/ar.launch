    <!-- Launch all nodes to control Spot, simulated or real, using MoveIt -->
    <include file="$(find spot_skills)/launch/spot_moveit_bringup.launch" pass_all_args="true" />

    <!-- Run Rviz using a config file designed for this demo -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find spot_skills)/rviz/moveit_spot_demo.rviz" />

    <!-- Launch the AR marker detection -->
    <include file="$(find spot_skills)/launch/detect_markers_bundle.launch" />
    <!-- <include file="$(find spot_skills)/launch/detect_markers_single.launch" /> -->
        <!-- <arg name="marker_size_frontleft" value="$(arg marker_size_frontleft)" /> -->
